class Solution {
    public int[] dailyTemperatures(int[] T) {
        int[] arr = new int[T.length];
        int i=0;
        int j=i+1;
        while(i<T.length-1){
            if(j==T.length){
                arr[i]=0;
                i++;
                j=i+1;
            }
            else if(T[i]<T[j]){
                arr[i]=j-i;
                i++;
                j=i+1;
            }
            else{
                j++;
            }
        }
        return arr;
    }
}
